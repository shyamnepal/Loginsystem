@model UserLogin

@{
    Layout = "~/views/shared/_layoutlogin.cshtml";
}


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Register Form</h4>
            <p class="card-description">
                User
            </p>
            <form class="forms-sample" asp-action="UserLogin" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername1">Username</label>
                    <input asp-for="UserName" type="text" class="form-control" id="exampleInputUsername1" placeholder="Username">
                </div>
              
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>


                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input">
                        Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>